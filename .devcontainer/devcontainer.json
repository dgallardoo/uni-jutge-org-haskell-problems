{
  "name": "Haskell Dev Container",
  "image": "ubuntu:latest",
  "postCreateCommand": "curl --proto '=https' --tlsv1.2 -sSf https://get-ghcup.haskell.org | BOOTSTRAP_HASKELL_NONINTERACTIVE=1 BOOTSTRAP_HASKELL_ADJUST_BASHRC=1 sh",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "jutge-org.jutge-vscode"
      ]
    }
  }
}
